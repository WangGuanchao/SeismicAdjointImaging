#-----------------------------------------------------------------------------
# Makefile
#-----------------------------------------------------------------------------

include ../make.inc

#-----------------------------------------------------------------------------
# Programs
#-----------------------------------------------------------------------------

PROGS = $(wildcard *.c)
OBJES = $(patsubst %.c, %.o, $(PROGS))
FUNCS = $(patsubst %.c, %  , $(PROGS))

all : $(OBJES) libsji.a

libsji.a :
	ar crv libsji.a *.o

%.o : %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	rm *.a -f
	rm *.o -f
